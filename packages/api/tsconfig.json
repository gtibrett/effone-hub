{
	"compilerOptions": {
		"target":                           "ESNext",
		"module":                           "CommonJS",
		"esModuleInterop":                  true,
		"moduleResolution":                 "node",
		"sourceMap":                        true,
		"forceConsistentCasingInFileNames": true,
		"strict":                           true,
		"skipLibCheck":                     true,
		"declaration":                      true,
		"composite":                        true,
		"rootDir":                          "./src",
		"outDir":                           "./dist"
	},
	
	"include": [
		"./src/**/*"
	],
	
	"exclude":         [
		"dist",
		"node_modules"
	]
}