{
	"compilerOptions": {
		"target":                           "ESNext",
		"lib":                              [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs":                          false,
		"skipLibCheck":                     false,
		"esModuleInterop":                  true,
		"allowSyntheticDefaultImports":     true,
		"strict":                           true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch":       true,
		"module":                           "esnext",
		"moduleResolution":                 "node",
		"resolveJsonModule":                true,
		"isolatedModules":                  true,
		"noEmit":                           true,
		"jsx":                              "react-jsx",
		"baseUrl":                          "./src",
		"incremental":                      true,
		"paths":                            {
			"@ui-components": [
				"ui-components"
			]
		}
	},
	"types": [
		"node",
		"jest",
		"@testing-library/jest-dom"
	],
	"include":         [
		"src"
	]
}
